=breadcrumb_tag do
  %li.active
    Список тарифов
.page-header
  %h1= t('headers.cars.index')

%table.table.table-hover.table-striped
  %caption
    = link_to new_rate_path, class: 'btn btn-success' do
      = fa_icon :plus
      = t('buttons.new.rate')
  %thead
    %tr
      %th Название
      %th Время суток
      %th Дальность поездки с точки зрения удалённости от центра Москвы
      %th Цена за километр пути
      %th
      %th
      %th

  %tbody
    - @rates.each do |rate|
      %tr.table-active
        %td.center= rate.name_r
        %td.center= rate.times_of_day
        %td.center= rate.range
        %td.center= rate.price
        %td.right
          = link_to edit_rate_path(rate), class: 'btn btn-primary' do
            = fa_icon :edit
            = t('buttons.edit')
          = link_to rate, class: 'btn btn-info' do
            = fa_icon "eye"
            = t('buttons.show')
          = link_to rate, :method => :delete, :data => { :confirm => t('buttons.confirm.rate') }, class: 'btn btn-danger' do
            = fa_icon :times
            = t('buttons.destroy')
