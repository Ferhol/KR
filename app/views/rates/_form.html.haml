= form_for @rate do |f|
  - if @rate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rate.errors.count, "error")} prohibited this rate from being saved:"
      %ul
        - @rate.errors.full_messages.each do |msg|
          %li= msg
  .container
    .row
      .col-md-5
        .form-group
          = f.label :name_r
          %br
          = f.text_field :name_r
      .col-md-5
        .form-group
          = f.label :price
          %br
          = f.text_field :price
      .col-md-5
        .form-group
          = f.label :times_of_day
          %br
          = f.select :times_of_day, [['День','День'],['Ночь','Ночь']]
      .col-md-5
        .form-group
          = f.label :range
          %br
          = f.select :range, [['В пределах МКАД','В пределах МКАД'],['За МКАД','За МКАД'],['Подмосковье','Подмосковье']]

  .container
    .row
      .actions
        .col-md-12
        .form-group
          = f.submit 'Сохранить', class: 'btn btn-primary'
