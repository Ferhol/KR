        = f.text_field(:birthday, value: lnil(f.object.birthday), class: 'form-control')
        %span.input-group-addon
          %span.glyphicon.glyphicon-calendar
  .col-md-6
    .form-group
      = f.label :inn
      = f.number_field :inn
  .col-md-6
    .form-group
      = f.label :series_p
