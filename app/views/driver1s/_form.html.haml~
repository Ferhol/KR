= form_for @driver1 do |f|
  - if @driver1.errors.any?
    #error_explanation
      %h2= "#{pluralize(@driver1.errors.count, "error")} prohibited this driver1 from being saved:"
      %ul
        - @driver1.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :fn
    = f.text_area :fn
  .field
    = f.label :sn
    = f.text_area :sn
  .field
    = f.label :ln
    = f.text_area :ln
  .field
    = f.label :birthday
    = f.date_select :birthday
  .field
    = f.label :inn
    = f.number_field :inn
  .field
    = f.label :series_p
    = f.number_field :series_p
  .field
    = f.label :number_p
    = f.number_field :number_p
  .panel.panel-success
    .panel-heading
      .panel-body
        Автомобиль
        .row
          =f.fields_for :car do |fm|
            .col-md-12
              .form-group
                = fm.label :mark, "mark"
                = fm.text_area :mark
            .col-md-12
              .form-group
                = fm.label :class_c, "class_c"
                = fm.select :class_c, [['Бизнес','Бизнес'],['Эконом','Эконом']]
            .col-md-12
              .form-group
                = fm.label :license_plate, "license_plate"
                = fm.text_field :license_plate
            .col-md-12
              .form-group
                = fm.label :color, "color"
                = fm.text_field :color
            .col-md-12
              .form-group
                = fm.label :year_of_issue, "year_of_issue"
                = fm.number_field :year_of_issue
  .actions
    = f.submit 'Сохранить'
