= form_for @car do |f|
  - if @car.errors.any?
    #error_explanation
      %h2= "#{pluralize(@car.errors.count, "error")} prohibited this car from being saved:"
      %ul
        - @car.errors.full_messages.each do |msg|
          %li= msg

  .col-md-6
    .form-group
      = f.label :mark
      = f.text_area :mark
  .col-md-6
    .form-group
      = f.label :license_plate
      = f.text_area :license_plate
  .col-md-6
    .form-group
      = f.label :color
      = f.text_area :color
  .col-md-12
    .form-group
      = f.label :class_c
      = f.select :class_c, [['Бизнес','Бизнес'],['Эконом','Эконом']]
  .col-md-6
    .form-group
      = f.label :year_of_issue
      = f.number_field :year_of_issue
  .actions
  .col-md-12
    .form-group
      = f.submit 'Сохранить', class: 'btn btn-primary'
