= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .container
    .row
      .col-md-5
        .form-group
          = f.label :date_o
          .input-group.date.datepicker
            = f.text_field(:date_o, value: lnil(f.object.date_o), class: 'form-control')
            %span.input-group-addon
              %span.glyphicon.glyphicon-calendar
      .col-md-5
        .form-group
          = f.label :time_o
          %br
          = f.time_select :time_o
      .col-md-5
        .form-group
          = f.label :address_o
          %br
          = f.text_field :address_o
      .col-md-5
        .form-group
          = f.label :address_p
          %br
          = f.text_field :address_p
      .col-md-5
        .form-group
          = f.label :number_p
          %br
          = f.number_field :number_p
      .col-md-5
        .form-group
          = f.label :route_length
          %br
          = f.text_field :route_length
      .col-md-5
        .form-group
          = f.label :driver1_id
          %br
          = f.select(:driver1_id, options_for_select(driver1_options, f.object.driver1_id), {}, class: 'form-control')

      .col-md-5
        .form-group
          = f.label :driver1_id
          %br
          = f.select(:rate_id, options_for_select(rate_options, f.object.rate_id), {}, class: 'form-control')

  .container
    .row
      .actions
        .col-md-12
          .form-group
            = f.submit 'Сохранить', class: 'btn btn-primary'
